virtual_server <%= @ip %> <%= @port %> {
  delay_loop <%= @delay_loop %>
  lb_algo <%= @lb_algo %>
  lb_kind <%= @lb_kind %>
  protocol <%= @protocol %>
  persistence_timeout <%= @persistence_timeout %>
<% if @sorry_server -%>
  sorry_server <%= @sorry_server %>
<% end -%>
<% if @virtualhost -%>
  virtualhost <%= @virtualhost %>
<% end -%>
